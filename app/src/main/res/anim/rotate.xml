<?xml version="1.0" encoding="utf-8"?>
<set xmlns:android="http://schemas.android.com/apk/res/android">

    /**
    * rotate splashImage
    *
    * rotates for 2.2 seconds
    */

    <rotate
        android:duration="2200"
        android:fromDegrees="0"
        android:toDegrees="315"
        android:pivotX="50%"
        android:pivotY="50%"
        ></rotate>
</set>