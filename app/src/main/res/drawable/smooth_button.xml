<?xml version="1.0" encoding="utf-8"?>

    <selector xmlns:android="http://schemas.android.com/apk/res/android" >
        <item android:state_pressed="true" >
            <shape android:shape="oval"  >
                <corners android:radius="40dip" />
                <stroke android:width="1dip" android:color="#45FF17" />
                <gradient android:angle="-90" android:startColor="#45FF17" android:endColor="#45FF17"  />
            </shape>
        </item>
        <item android:state_focused="true">
            <shape android:shape="oval"  >
                <corners android:radius="40dip" />
                <stroke android:width="1dip" android:color="#45FF17" />
                <solid android:color="#45FF17"/>
            </shape>
        </item>
        <item >
            <shape android:shape="rectangle"  >
                <corners android:radius="40dip" />
                <stroke android:width="1dip" android:color="#000000" />
                <gradient android:angle="-90" android:startColor="#FF9C9898" android:endColor="#505050" />
            </shape>
        </item>
    </selector>
